<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="feed"
            type="com.example.shortvideo.model.Feed" />

        <variable
            name="lifeCycleOwner"
            type="androidx.lifecycle.LifecycleOwner" />

        <import type="android.view.View" />

        <import type="com.example.shortvideo.model.Feed" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white"
        android:orientation="vertical"
        android:paddingTop="10dp">

        <include
            layout="@layout/layout_feed_autho"
            app:user="@{feed.author}" />

        <include
            layout="@layout/layout_feed_text"
            app:feedText="@{feed.feeds_text}"
            app:lines="@{3}" />

        <com.example.libcommon.view.CornerLinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_16"
            android:background="@color/color_gray2"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp_16"
            app:clip_radius="6dp"
            app:clip_side="all">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="@{feed.feeds_text}"
                android:textColor="@color/color_000"
                android:textSize="@dimen/sp_14"
                android:textStyle="bold" />

            <FrameLayout
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40">

                <com.example.shortvideo.view.SVImageView
                    app:image_url="@{feed.cover}"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    app:isCircle="@{false}"
                    app:clip_radius="6dp"
                    app:clip_side="right" />

                <ImageView
                    android:id="@+id/icon_video"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/icon_video_play"
                    android:visibility="@{feed.itemType==Feed.TYPE_VIDEO?View.VISIBLE:View.GONE}" />
            </FrameLayout>
        </com.example.libcommon.view.CornerLinearLayout>

        <include
            layout="@layout/layout_feed_tag"
            app:tagText="@{feed.activityText}" />

        <include
            android:id="@+id/interaction_binding"
            layout="@layout/layout_feed_interaction"
            app:feed="@{feed}"
            app:lifeCycleOwner="@{lifeCycleOwner}" />
    </LinearLayout>
</layout>